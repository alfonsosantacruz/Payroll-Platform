	<style>
	table {
	  font-family: arial, sans-serif;
	  border-collapse: collapse;
	  width: 100%;
	}

	td, th {
	  border: 1px solid #dddddd;
	  text-align: left;
	  padding: 8px;
	}

	tr:nth-child(even) {
	  background-color: #dddddd;
	}
	.footer {
	  /* position: absolute; */
	  height: 65px;
	  text-align: center;
	  bottom: 0;
	  width: 100%;
	  color: #999;
	  font-family: 'acumin-pro';
	  font-size: 16px;
	}

	.footer-links {
	  margin: 10px 0;
	}

	.footer-links li {
	  display: inline;
	  margin-right: 10px;
	}

	.footer a {
	  color: #999;
	  font-size: 16px;
	}

	.footer div {
	  display: inline-block;
	}
